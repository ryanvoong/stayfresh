extends layout

block content
    .search-bar

        each item in user.pantry
         - var exp= item.expiration
         - var curr= Date.now();



            .col-md-3.btn.btn-default.items
                p Expires: #{item.expiration.getMonth()}/#{item.expiration.getDate()}/#{item.expiration.getFullYear()}
                img.img-responsive(src='http://www.glutenfreeawesome.com/wp-content/uploads/2012/06/carrots-300x187.jpg')
                h2 #{item.name}