extends layout

block content
    .container.overlay
        h1 Shopping List

    p Add item
    form(action="/list_add_item", method="post")
        input(type="hidden", name="_csrf", value=_csrf)
        .form-group
            input.form-control(type="text", placeholder="Name of Food", name="name")
        button.btn.btn-defaut(type="submit") Submit

    .col-md-offset-1
        each item in shoppingList.items
            .col-md-3.items
                a.fa.fa-trash
                img.img-responsive(src="#{item.url}")
                h2 #{item.name}
