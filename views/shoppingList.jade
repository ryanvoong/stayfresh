extends layout

block content
    .container.mini_overlay
        h1 Shopping List
    .nav.info-bar
        ul.nav.navbar-nav.navbar-default.indiv-bar
            li.dropdown(class=title == 'Add-Item' ? 'active' : undefined)
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                    h3 Add Item
                        i.caret
                ul.dropdown-menu
                    .add-item
                        form(name="add-item", method="post")
                            input(type="hidden", name="_csrf", value=_csrf)
                            .form-group
                                input.form-control(type="text", placeholder="Name")
                            button.btn.btn-defaut(type="submit") Submit


    .col-md-offset-1
        each item in shoppingList.items
            .col-md-3.items
                a.fa.fa-trash.fa-2x
                img.img-responsive(src='http://www.glutenfreeawesome.com/wp-content/uploads/2012/06/carrots-300x187.jpg')
                h2 #{item.name}
